#!/bin/bash

source _common.sh
source ynh_add_swap
source /usr/share/yunohost/helpers

#=================================================
# REMOVE SYSTEM CONFIGURATIONS
#=================================================
ynh_script_progression "Removing system configurations related to $app..."

# Remove the service from the list of services known by YunoHost (added from `yunohost service add`)
if ynh_hide_warnings yunohost service status "$app-api-gateway" >/dev/null; then
    ynh_script_progression "Removing $app-api-gateway service..."
    yunohost service remove "$app-api-gateway"
fi
if ynh_hide_warnings yunohost service status "$app-auth" >/dev/null; then
    ynh_script_progression "Removing $app-auth service..."
    yunohost service remove "$app-auth"
fi
if ynh_hide_warnings yunohost service status "$app-auth-worker" >/dev/null; then
    ynh_script_progression "Removing $app-auth-worker service..."
    yunohost service remove "$app-auth-worker"
fi
if ynh_hide_warnings yunohost service status "$app-files" >/dev/null; then
    ynh_script_progression "Removing $app-files service..."
    yunohost service remove "$app-files"
fi
if ynh_hide_warnings yunohost service status "$app-syncing-server" >/dev/null; then
    ynh_script_progression "Removing $app-syncing-server service..."
    yunohost service remove "$app-syncing-server"
fi
if ynh_hide_warnings yunohost service status "$app-syncing-server-worker" >/dev/null; then
    ynh_script_progression "Removing $app-syncing-server-worker service..."
    yunohost service remove "$app-syncing-server-worker"
fi


# Remove the dedicated systemd config
ynh_config_remove_systemd "$app-api-gateway"
ynh_config_remove_systemd "$app-auth"
ynh_config_remove_systemd "$app-auth-worker"
ynh_config_remove_systemd "$app-files"
ynh_config_remove_systemd "$app-syncing-server"
ynh_config_remove_systemd "$app-syncing-server-worker"
ynh_config_remove_systemd "$app-workspace"

ynh_reset_systemd

# Remove the app-specific logrotate config
ynh_config_remove_logrotate

ynh_redis_remove_db

# Remove the dedicated NGINX config
ynh_config_remove_nginx

# Remove the dedicated Fail2Ban config
ynh_config_remove_fail2ban

#=================================================
# SPECIFIC REMOVE
#=================================================
# REMOVE VARIOUS FILES
#=================================================
ynh_script_progression "Removing various files..."

# Remove a cron file
ynh_safe_rm "/etc/cron.d/$app"

#=================================================
# REMOVE SWAP
#=================================================
ynh_script_progression "Removing swap..."

if ! ynh_in_ci_tests; then
    ynh_del_swap
fi

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Removal of $app completed"
